class Solution {
    public int findKRotation(List<Integer> arr) {
        int min = Integer.MAX_VALUE;
        int index=-1;
        for(int i=0; i<arr.size(); i++){
            if(arr.get(i)<min){
                min=arr.get(i);
                index=i;
            }
        }
        return index;
    }
}
